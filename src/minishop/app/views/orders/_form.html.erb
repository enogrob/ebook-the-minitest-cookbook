<%= form_for(@order) do |f| %>
  <%= render_errors_for @order %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address, rows: 3 %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
                 prompt: 'Select a payment method' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
